<?xml version="1.0" encoding="UTF-8"?>
<Flow xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>60.0</apiVersion>
    <description>Triggers Notion sync when Contact records are created or updated (Integration Test)</description>
    <environments>Default</environments>
    <interviewLabel>Notion Sync - Contact Create/Update {!$Flow.CurrentDateTime}</interviewLabel>
    <label>Notion Sync - Contact Create/Update (Integration)</label>
    <processMetadataValues>
        <name>BuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>CanvasMode</name>
        <value>
            <stringValue>AUTO_LAYOUT_CANVAS</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>OriginBuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processType>AutoLaunchedFlow</processType>
    <actionCalls>
        <description>Sync record to Notion</description>
        <name>Sync_to_Notion</name>
        <label>Sync to Notion</label>
        <locationX>176</locationX>
        <locationY>158</locationY>
        <actionName>NotionSyncInvocable</actionName>
        <actionType>apex</actionType>
        <inputParameters>
            <name>recordId</name>
            <value>
                <elementReference>$Record.Id</elementReference>
            </value>
        </inputParameters>
        <inputParameters>
            <name>objectType</name>
            <value>
                <stringValue>Contact</stringValue>
            </value>
        </inputParameters>
        <inputParameters>
            <name>operationType</name>
            <value>
                <elementReference>OperationType</elementReference>
            </value>
        </inputParameters>
    </actionCalls>
    <start>
        <locationX>50</locationX>
        <locationY>0</locationY>
        <connector>
            <targetReference>Sync_to_Notion</targetReference>
        </connector>
        <object>Contact</object>
        <recordTriggerType>CreateAndUpdate</recordTriggerType>
        <triggerType>RecordAfterSave</triggerType>
    </start>
    <status>Active</status>
    <formulas>
        <name>OperationType</name>
        <dataType>String</dataType>
        <expression>IF(ISNEW(), 'CREATE', 'UPDATE')</expression>
    </formulas>
</Flow>
